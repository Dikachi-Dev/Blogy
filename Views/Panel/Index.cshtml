@model IEnumerable<Blogy.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Admin Panel</h1>

<p>
    <a asp-action="Edit">Create New</a>
</p>


<div>
    <ul>
        @foreach (var post in Model)
        {
        <li>
            <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id">
                @post.Title
            </a>
            -
            <a asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">
                Edit
            </a>
            -
            <a asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id">
                Delete
            </a>
        </li>
        }
    </ul>
</div>

